---
import Header from '@/components/Header.astro'
import Sidebar from '@/components/Sidebar.astro'
import Footer from '@/components/Footer.astro'
import '@/styles/default.scss'
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/hyphae-logo.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | mycelithyl-hyphae</title>
    </head>
    <body class="h-svh">
        <Header></Header>
        <div class="md:flex">
            <Sidebar></Sidebar>
            <main class="flex grow shrink-0 justify-center">
                <div class="w-full max-w-screen-md mx-8">
                    <h1 class="text-center text-lime-600 text-4xl">
                        {title}
                    </h1>
                    <slot />
                </div>
            </main>
        </div>
        <Footer></Footer>
    </body>
</html>
