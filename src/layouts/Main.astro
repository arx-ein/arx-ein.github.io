---
import Header from '@/components/Header.astro'
import Sidebar from '@/components/Sidebar.astro'
import Footer from '@/components/Footer.astro'
import '@/styles/default.css'
interface Props {
    title: string;
    caption?: string;
    larger?: boolean;
}

const { title, caption, larger } = Astro.props;
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/mycelithyl-hyphae/hyphae-logo.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | mycelithyl-hyphae</title>
    </head>
    <body class="h-svh dark:bg-zinc-900">
        <Header></Header>
        <div class="md:flex">
            <Sidebar></Sidebar>
            <main class="flex flex-auto justify-center">
                <div class={`w-full px-8 ${larger ? "max-w-screen-lg" : "max-w-screen-md"}`}>
                    <h1 class="title-header">
                        {(caption == undefined) ? title : caption}
                    </h1>
                    <slot />
                </div>
            </main>
        </div>
        <Footer></Footer>
    </body>
</html>
