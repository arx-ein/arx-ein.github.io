function getAge(birth: Date) {
  const today = new Date();
  const currentYearBirthday = new Date(today.getFullYear(), birth.getMonth(), birth.getDate());
  return today.getFullYear() - birth.getFullYear() - ((today < currentYearBirthday) ? 1 : 0);
}
