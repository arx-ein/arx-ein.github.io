---
interface Props {
  height?: number;
}

const {height} = Astro.props;
const defHeight = height ? height : 36;
---

<li class="flex justify-center">
  <div
    class="flex flex-auto peer transition-[border-color,padding] py-0 overflow-hidden
      border-y-2 border-fore dark:border-fore-dark hover:border-highlight
      px-1 hover:px-3 motion-reduce:transition-none motion-reduce:hover:px-1"
  >
    <slot />
  </div>
  <svg viewBox="0 0 20 70" class="ml-2 peer-hover:ml-0 motion-reduce:peer-hover:ml-2 -order-1">
    <path d="M 20,0 L 1,35 20,70"></path>
  </svg>
  <svg viewBox="0 0 20 70" class="mr-2 peer-hover:mr-0 motion-reduce:peer-hover:mr-2">
    <path d="M 0,0 L 19,35 0,70"></path>
  </svg>
</li>
<style define:vars={{defHeight}}>
  @reference "#default.css";
  li {
    height: calc(var(--spacing) * var(--defHeight));
    > * {
      @apply h-full
    }
  }
  svg {
    stroke-linecap: square;
    @apply flex-none stroke-2 stroke-fore dark:stroke-fore-dark peer-hover:stroke-highlight
      transition-[stroke,fill,margin] motion-reduce:transition-none motion-reduce:hover:px-0;
  }
  path {
    vector-effect: non-scaling-stroke;
  }
</style>
