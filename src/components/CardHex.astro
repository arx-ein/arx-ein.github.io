---
interface Props {
    title: string;
    body: string;
    href: string;
}

const { href, title, body } = Astro.props;
---

<li	class="flex justify-center h-36">
    <div id="content" class="
        flex flex-auto peer transition-all hover:px-2
        border-y-2 border-fore dark:border-fore-dark
        motion-reduce:transition-none motion-reduce:hover:px-0
        hover:border-indigo-800 dark:hover:border-indigo-200
    ">
        <a href={href} class="flex-auto px-1 py-0 overflow-clip">
            <h2 class="my-2 text-2xl text-center text-lime-600 dark:text-green-500 font-bold">
                {title}
            </h2>
            <p class="m-0 text-base leading-5" set:html={body}>
            </p>
        </a>
    </div>
    <div id="card-l" class="card-a translate-x-px ml-2 peer-hover:ml-0 motion-reduce:peer-hover:ml-2 -order-1"></div>
    <div id="card-r" class="card-a -translate-x-px mr-2 peer-hover:mr-0 motion-reduce:peer-hover:mr-2"></div>
</li>
<style>
    li div:not(#content) {
        @apply flex-none
    }
    div.card-a {
        --s: 2px;
        @apply aspect-[2/7] h-full bg-fore dark:bg-fore-dark
        peer-hover:bg-indigo-800 dark:peer-hover:bg-indigo-200
        transition-all motion-reduce:transition-none motion-reduce:hover:px-0 
    }
    div#card-l {
        clip-path: polygon(100% 0, calc(100% - var(--s)) 0, 0 50%, calc(100% - var(--s)) 100%, 100% 100%, var(--s) 50%);
    }
    div#card-r {
        clip-path: polygon(0 0, var(--s) 0, 100% 50%,var(--s) 100%, 0 100%, calc(100% - var(--s)) 50%);
    }
</style>
